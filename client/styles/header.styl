@import 'common.styl'

body.dark #header > header
  --mdc-theme-on-primary: #ccc

#header > header
  --mdc-theme-on-primary: #5f6368

  background-color: var(--background)!important
  border-bottom: 1px solid #dadce0

  .disabled, [disabled]
    opacity: .3
    pointer-events: none

  section.mdc-top-app-bar__section
    flex: 0 0 auto

  section.mdc-top-app-bar__section.search-input
    padding: 0
    flex: 1 1 auto
    justify-content: left

    .mdc-text-field
      margin: 0 5em
      max-width: 800px
      width: 100%

      +mobile()
        display: none

  +desktop()
    .search-button
      display: none

  .new-tab
    flex: 0 0 auto
    padding: 0 .9em

  .create-dialog
    color: grey

    .mdc-text-field
      width: 100%

    .mdc-dialog__surface
      min-width: 0
      width: 300px
